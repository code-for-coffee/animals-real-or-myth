<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.jcapps.statebirds.MainActivity"
    android:gravity="bottom"
    android:background="@drawable/bigbird2"
    android:alpha="1"
    android:id="@+id/layout_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Illinois"
        android:id="@+id/txt_state"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cardinal"
        android:id="@+id/txt_bird"
        android:gravity="left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_state"
        android:layout_alignRight="@+id/btn_true"
        android:layout_alignEnd="@+id/btn_true"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The northern cardinal, a mid-sized songbird, generally has a body length of 7.9 to 9.3 inches, has a wingspan ranging from 9.8 to 12.2 inches, and weighs between 1.19 and 2.29 ounces, with an average weight of 1.58 ounces."
        android:id="@+id/txt_description"
        android:layout_below="@+id/txt_bird"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#00C853" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="True"
        android:id="@+id/btn_true"
        android:layout_above="@+id/txt_correct"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="False"
        android:id="@+id/btn_false"
        android:layout_above="@+id/txt_correct"
        android:layout_alignLeft="@+id/btn_true"
        android:layout_alignStart="@+id/btn_true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Correct: 0"
        android:id="@+id/txt_correct"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#B71C1C" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Incorrect: 0"
        android:id="@+id/txt_incorrect"
        android:layout_alignTop="@+id/txt_correct"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#B71C1C" />

</RelativeLayout>
